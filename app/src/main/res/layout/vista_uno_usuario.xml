<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dab78d"
    android:orientation="vertical"
    tools:context=".VistaUnoUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imglogologin"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#400000"
                        android:text="Yes"
                        android:textColor="#ffffff"></Button>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#400000"
                        android:text="OK"
                        android:textColor="#ffffff"></Button>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#400000"
                        android:text="Yes"
                        android:textColor="#ffffff"></Button>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#400000"
                        android:text="OK"
                        android:textColor="#ffffff"></Button>


                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/imgbtncasavistauno"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/casa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnpromosvistauno"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imgbtnordenvistauno"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/comida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnpromosvistauno"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@+id/imgbtncasavistauno" />

    <ImageButton
        android:id="@+id/imgbtnpromosvistauno"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/promocion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnusuariovistauno" />

    <ImageButton
        android:id="@+id/imgbtnusuariovistauno"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:background="@mipmap/usuario"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="675dp" />

</androidx.constraintlayout.widget.ConstraintLayout>